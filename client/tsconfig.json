{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@shared": ["./src/_shared"],
      "@shared/*": ["./src/_shared/*"],
      "@layout": ["./src/_layout"],
      "@layout/*": ["./src/_layout/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "types": ["chrome", "node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
